<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:paddingBottom="16dp"
    android:background="@drawable/layaout_bg"
    android:id="@+id/parent_layaout"
    >

    <TextView
        android:id="@+id/owner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Mezgha"
        android:textSize="16dp"
        android:textStyle="bold|italic"
        android:textColor="@android:color/black"/>

    <ImageView
        android:id="@+id/meteo"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintTop_toBottomOf="@id/owner" />


    <TextView
        android:id="@+id/city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Paris, France"
        app:layout_constraintLeft_toRightOf="@id/meteo"
        app:layout_constraintTop_toBottomOf="@id/owner"
        android:textColor="@android:color/black"/>



    <TextView
        android:id="@+id/chekInDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="chekInDate"
        app:layout_constraintLeft_toRightOf="@id/meteo"
        app:layout_constraintTop_toBottomOf="@id/city"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/checkOutDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:text="checkOutDate"
        app:layout_constraintLeft_toRightOf="@id/chekInDate"
        app:layout_constraintTop_toBottomOf="@id/city"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/nbPrs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="4 participants"
        app:layout_constraintLeft_toRightOf="@id/meteo"
        app:layout_constraintTop_toBottomOf="@id/chekInDate"
        android:textColor="@android:color/black"/>


    <TextView
        android:id="@+id/roomPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="No price"
        app:layout_constraintLeft_toRightOf="@id/meteo"
        app:layout_constraintTop_toBottomOf="@id/nbPrs"
        android:textColor="@android:color/black"/>


    <TextView
        android:id="@+id/hotelName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Ibis Hotel"
        app:layout_constraintLeft_toRightOf="@id/meteo"
        app:layout_constraintTop_toBottomOf="@id/roomPrice"
        android:textColor="@android:color/black"/>

    <Button
        android:id="@+id/join"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Join"
        app:layout_constraintTop_toBottomOf="@+id/meteo"
        style="?android:textAppearanceSmall"
        android:textColor="@color/colorText"
        android:background="#e6c229"/>

    <Button
        android:id="@+id/quit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quit"
        app:layout_constraintTop_toBottomOf="@+id/meteo"
        app:layout_constraintLeft_toRightOf="@+id/join"
        android:layout_marginLeft="30dp"
        style="?android:textAppearanceSmall"
        android:textColor="@color/colorText"
        android:background="#e6c229"/>
</android.support.constraint.ConstraintLayout>