<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:paddingBottom="16dp"
    android:background="@drawable/layaout_bg"
    android:id="@+id/parent_layaout"
    >

    <TextView
        android:id="@+id/owner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Mezgha"
        android:textSize="16dp"
        android:textStyle="bold|italic"
        android:textColor="@android:color/black"/>

    <ImageView
        android:id="@+id/meteo"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintTop_toBottomOf="@id/owner" />


    <TextView
        android:id="@+id/city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Paris, France"
        app:layout_constraintLeft_toRightOf="@id/meteo"
        app:layout_constraintTop_toBottomOf="@id/owner"
        android:textColor="@android:color/black"/>



    <TextView
        android:id="@+id/chekInDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="chekInDate"
        app:layout_constraintLeft_toRightOf="@id/meteo"
        app:layout_constraintTop_toBottomOf="@id/city"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/checkOutDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:text="checkOutDate"
        app:layout_constraintLeft_toRightOf="@id/chekInDate"
        app:layout_constraintTop_toBottomOf="@id/city"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/nbPrs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="4 participants"
        app:layout_constraintLeft_toRightOf="@id/meteo"
        app:layout_constraintTop_toBottomOf="@id/chekInDate"
        android:textColor="@android:color/black"/>


    <TextView
        android:id="@+id/roomPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="No price"
        app:layout_constraintLeft_toRightOf="@id/meteo"
        app:layout_constraintTop_toBottomOf="@id/nbPrs"
        android:textColor="@android:color/black"/>


    <TextView
        android:id="@+id/hotelName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Ibis Hotel"
        app:layout_constraintLeft_toRightOf="@id/meteo"
        app:layout_constraintTop_toBottomOf="@id/roomPrice"
        android:textColor="@android:color/black"/>


    <android.support.v7.widget.CardView

        android:id="@+id/btn_unsubscribe"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/hotelName"
        android:layout_marginTop="3dp"
        app:layout_constraintRight_toRightOf="@id/parent_layaout"
        android:elevation="5dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/colorButton"
        android:innerRadius="0dp"
        android:shape="ring"
        android:layout_gravity="right"
        app:cardUseCompatPadding="true"
        android:clickable="true"
        android:thicknessRatio="1.9"
        android:layout_centerHorizontal="true"
        android:foreground="?attr/selectableItemBackground"
        android:layout_marginLeft="5dp"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            >
            <ImageView
                android:id="@+id/img_create_event_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="center"
                android:src="@drawable/ic_cancel_black_24dp" />
            <TextView
                android:id="@+id/lbl_createEvent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Unsubscribe"
                android:textSize="15dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/mdtp_white"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/img_create_event_icon"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView

        android:id="@+id/btn_comment"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/hotelName"
        android:layout_marginTop="3dp"
        app:layout_constraintLeft_toLeftOf="@id/parent_layaout"
        app:layout_constraintRight_toLeftOf="@id/btn_unsubscribe"
        android:elevation="5dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/colorSearchBtn"
        android:innerRadius="0dp"
        android:shape="ring"
        android:layout_gravity="left"
        app:cardUseCompatPadding="true"
        android:clickable="true"
        android:thicknessRatio="1.9"
        android:layout_centerHorizontal="true"
        android:foreground="?attr/selectableItemBackground"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            >
            <ImageView
                android:id="@+id/img_create_event_icon1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="center"
                android:src="@drawable/ic_add_circle_black_24dp" />
            <TextView
                android:id="@+id/lbl_createEvent1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Comment"
                android:textSize="15dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/mdtp_white"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/img_create_event_icon1"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>




</android.support.constraint.ConstraintLayout>